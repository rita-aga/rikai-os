# RikaiOS Terraform Variables
# Copy to terraform.tfvars and customize

aws_region  = "us-west-2"
environment = "dev"

# VPC
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-west-2a", "us-west-2b"]

# Aurora (Serverless v2)
aurora_min_capacity = 0.5  # Minimum ACU (scales to zero-ish)
aurora_max_capacity = 4    # Maximum ACU

# ECS
api_desired_count = 1
api_cpu           = 512
api_memory        = 1024
letta_cpu         = 1024
letta_memory      = 2048

# Container images (set after pushing to ECR)
rikaios_api_image = ""  # e.g., "123456789.dkr.ecr.us-west-2.amazonaws.com/rikaios:latest"
letta_image       = "letta/letta:latest"

# API Keys (create SSM parameters first, then reference ARNs)
# voyage_api_key_arn    = "arn:aws:ssm:us-west-2:123456789:parameter/rikaios/dev/voyage-api-key"
# anthropic_api_key_arn = "arn:aws:ssm:us-west-2:123456789:parameter/rikaios/dev/anthropic-api-key"
